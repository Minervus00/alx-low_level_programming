CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${OBJ}
	${CC} ${OBJ} -o school

$(word 1, ${OBJ}): main.c
	${CC} ${CFLAGS}	-c -o $@ $<

$(word 2, ${OBJ}): school.c
	${CC} ${CFLAGS}	-c -o $@ $<

clean:
	${RM} *~ ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: oclean all

test:
	@echo $(word 2, ${OBJ})
